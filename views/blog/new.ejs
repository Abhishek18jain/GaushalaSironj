<%- include('../particles/navbar') %>
<link rel="stylesheet" href="/css/blog/new.css">
<div class="blog-wrapper">
  <div class="blog-form-box">
    <h2 class="form-heading">📝 Create a New Blog Post</h2>

    <form action="/blogs" method="POST" enctype="multipart/form-data" class="blog-form">
      <div class="form-group">
        <label for="title"><b>Blog Title</b></label>
        <input type="text" name="title" id="title" placeholder="Enter blog title" required>
      </div>

      <div class="form-group">
        <label for="image"><b>Upload Image </b>
        </label>
        <input type="file" name="image" id="image" placeholder="Paste image URL (optional)">
      </div>

      <div class="form-group">
        <label for="content"><b>Write about the blog</b></label>
        <textarea name="content" id="content" rows="10" placeholder="Write your blog content..." required></textarea>
      </div>

      <button type="submit" class="btn-submit">🚀 Publish Blog</button>
    </form>
  </div>
</div>

